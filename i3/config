# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    i3bar_command i3bar -t
    separator_symbol "■"
    height $height
	colors {
	    statusline         $white
	    background         $darkblack
	    separator          $transparent

#                          BORDER       BACKGROUND   TEXT
	    focused_workspace  $transparent $transparent $white
	    inactive_workspace $transparent $transparent $darkwhite
	    active_workspace   $transparent $transparent $darkwhite
	    urgent_workspace   $darkred     $darkred     $transparent
	    binding_mode       $darkred     $darkred     $transparent
	#	background #000000
	#	statusline #ffffff
	#	separator  #666666
	#	
	#	# Type			Border	Backg	Font
	#	focused_workspace	#008fff	#007fff	#ffffff
	#	active_workspace	#333333	#5f676a	#ffffff
	#	inactive_workspace	#333333	#222222	#888888
	#	urgent_workspace	#aa0000	#990000	#ffffff
	}
	position top
    #tray_output none
	#status_command ~/.config/i3/bumblebee-status/bumblebee-status -m sensors2 cpu memory brightness pasink battery date time -p time.format="%H:%M" -p date.format="%Y/%m/%d" sensors2.chip="coretemp-isa-0000" sensors2.chip_field_exclude="coretemp-isa-0000." -t iceberg2 #-dark-powerline #gruvbox -p sensors2.showtemp=false
	#status_command ~/.config/i3/bumblebee-status/bumblebee-status -m sensors cpu memory brightness pasink battery date time -p time.format="%H:%M" date.format="%Y/%m/%d"  -t iceberg2 #-dark-powerline #gruvbox -p sensors2.showtemp=false
	status_command polybar example
}

